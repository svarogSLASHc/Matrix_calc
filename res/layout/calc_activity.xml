<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <Spinner
                android:id="@+id/sp_matrix_size_matrix_activity"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                />
        <Button
                android:id="@+id/btn_calc_matrix_activity"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:text="Calc"
                android:layout_weight="1"
                />
        <Button
                android:id="@+id/btn_clear_matrix_activity"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:text="Clear"
                android:layout_weight="1"
                />
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="horizontal">
        <GridView
                android:id="@+id/gv_matrix_first_matrix_activity"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_alignRight="@+id/gv_matrix_second_matrix_activity"
                />
        <GridView
                android:id="@+id/gv_matrix_second_matrix_activity"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                />
        />
    </LinearLayout>

</LinearLayout>