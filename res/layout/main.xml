<?xml version="1.0" encoding="utf-8"?>
   <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
        android:padding="15dp">
       <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:layout_marginTop="15dp">
       <Button
              android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/bntAdd_main"
               android:text="Sum"
               android:layout_marginTop="15dp"/>
       <Button
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/bntMinus_main"
               android:text="Minus"
               android:layout_marginTop="15dp"/>
       <Button
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/bntMultiplied_main"
               android:text="Multiplied"
               android:layout_marginTop="15dp"/>
       <Button
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/bntDivided_main"
               android:text="Divided"
               android:layout_marginTop="15dp"/>
       <Button
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/bntInverse_main"
               android:text="Inverse"
               android:layout_marginTop="15dp"/>
       </LinearLayout>
</ScrollView>


